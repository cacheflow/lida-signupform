<% if can? :manage, @users %>
  <h1>Hello Admin</h1>
    <% @users.each do |user| %>
      <div class="col-md-6 col-md-offset-2">
        <%= user.name %>
        <%= user.email %>
        <%= user.category %>
        <%= user.offer %>
      </div>
      <div class="col-md-3">
        <%= link_to "Edit user", edit_user_path(user) %>
      </div>
    <% end %>
<% else %>
  <h1>You're not the admin</h1>
<% end %> 
