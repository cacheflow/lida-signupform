<% if current_user %>
<ul class="nav nav-tabs">
  <li role="presentation"><%= link_to "Login", new_session_path %>  </li>
</ul>

<div class = "container">
    <div class="col-md-4"></div>
    <h1>Sign up</h1>
    <%=bootstrap_form_for @user, html: {'data-parsley-validate' => ''} do |u| %>
      <%=u.text_field :name, required: true,
      'data-parsley-trigger' => 'blur', placeholder: 'name' %>
      <%=u.email_field :email, required: true, 'data-parsley-type' => 'email',
      'data-parsley-trigger' => 'blur', placeholder: 'email' %>
      <%=u.file_field :avatar %>
      <%=u.password_field :password, placeholder: 'password',
      required: true,
      'data-parsley-trigger' => 'blur'
      %>
      <%=u.hidden_field :created_at %>
      <%=u.submit "Submit" %>
    <% end %>
    Already signed up? Login <%=link_to "here", new_session_path %>
    </div>
</div>
<% end %> 
